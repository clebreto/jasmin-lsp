// Math library - provides utility functions for mathematical operations
// This file is meant to be required by other Jasmin files

fn square(reg u64 x) -> reg u64 {
  reg u64 result;
  result = x * x;
  return result;
}

fn add(reg u64 a, reg u64 b) -> reg u64 {
  reg u64 sum;
  sum = a + b;
  return sum;
}

fn subtract(reg u64 a, reg u64 b) -> reg u64 {
  reg u64 diff;
  diff = a - b;
  return diff;
}

fn double(reg u64 value) -> reg u64 {
  reg u64 result;
  result = value + value;
  return result;
}

fn increment(reg u64 x) -> reg u64 {
  reg u64 result;
  result = x + #1;
  return result;
}
